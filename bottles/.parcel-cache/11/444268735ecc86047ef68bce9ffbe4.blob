body {
            font-family: Helvetica Neue, Helvetica, sans-serif;
            margin: 0;
            padding: 0;
            font-size: 14px
        }

        header {
            background-color: #999;
            color: #eee;
            height: 0
        }

        main {
            background-color: #333;
            color: #ddd;
            height: 100vh;
            overflow: scroll
        }

        footer {
            background-color: #666;
            color: #eee;
            height: 0
        }
        #bottles {
            position:absolute;
            top:0px;
            width:100vw;
            height: 100vh;
            left:0px;
        }
        .results {
            position:absolute;
            top:100px;
            left:100px;
            width:100vw;
            height: 400px;
        }

        .assembled {
            position:absolute;
            top:500px;
            left:100px;
            perspective: 1500px;
        }

        #bottles img {
            transform: scale(.5);
        }
        .assembled img {
            animation: spin 900ms linear infinite;
        }
        @keyframes spin {
            0% {
                transform: rotate3d(0, 1, 0, 0deg);
            }
            100% {
                transform: rotate3d(.5, -1.5, .5, 360deg);
            }
        }